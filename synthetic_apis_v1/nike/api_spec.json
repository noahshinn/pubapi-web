{
  "openapi": "3.0.0",
  "info": {
    "title": "Nike Public API",
    "version": "1.0.0",
    "description": "API for Nike's e-commerce and fitness tracking platform"
  },
  "paths": {
    "/api/v1/products": {
      "get": {
        "summary": "Get products catalog",
        "parameters": [
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "gender",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/orders": {
      "get": {
        "summary": "Get user's orders",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Place new order",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewOrder"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created"
          }
        }
      }
    },
    "/api/v1/activities": {
      "get": {
        "summary": "Get user's fitness activities",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of activities",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Activity"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Log new activity",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewActivity"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Activity logged"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "category": {"type": "string"},
          "gender": {"type": "string"},
          "price": {"type": "number"},
          "sizes": {
            "type": "array",
            "items": {"type": "string"}
          },
          "colors": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "user_email": {"type": "string"},
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            }
          },
          "status": {"type": "string"},
          "total": {"type": "number"},
          "shipping_address": {"type": "string"},
          "created_at": {"type": "string"}
        }
      },
      "OrderItem": {
        "type": "object",
        "properties": {
          "product_id": {"type": "string"},
          "size": {"type": "string"},
          "color": {"type": "string"},
          "quantity": {"type": "integer"},
          "price": {"type": "number"}
        }
      },
      "Activity": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "type": {"type": "string"},
          "duration": {"type": "integer"},
          "distance": {"type": "number"},
          "calories": {"type": "integer"},
          "date": {"type": "string"}
        }
      },
      "NewActivity": {
        "type": "object",
        "properties": {
          "user_email": {"type": "string"},
          "type": {"type": "string"},
          "duration": {"type": "integer"},
          "distance": {"type": "number"}
        }
      },
      "NewOrder": {
        "type": "object",
        "properties": {
          "user_email": {"type": "string"},
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            }
          },
          "shipping_address": {"type": "string"}
        }
      }
    }
  }
}