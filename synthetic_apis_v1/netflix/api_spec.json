{
  "openapi": "3.0.0",
  "info": {
    "title": "Netflix Public API",
    "version": "1.0.0",
    "description": "API for streaming service"
  },
  "paths": {
    "/api/v1/browse": {
      "get": {
        "summary": "Get personalized content recommendations",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of recommended content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "continue_watching": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Content"
                      }
                    },
                    "my_list": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Content"
                      }
                    },
                    "trending": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Content"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/my-list": {
      "get": {
        "summary": "Get user's saved content list",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of saved content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Content"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add content to my list",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "content_id": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Content added to list"
          }
        }
      },
      "delete": {
        "summary": "Remove content from my list",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "content_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Content removed from list"
          }
        }
      }
    },
    "/api/v1/watch-history": {
      "get": {
        "summary": "Get user's watch history",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Watch history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WatchHistory"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/content/{contentId}": {
      "get": {
        "summary": "Get content details",
        "parameters": [
          {
            "name": "contentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Content details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Content"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Content": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "type": {"type": "string"},
          "genre": {"type": "string"},
          "description": {"type": "string"},
          "release_year": {"type": "integer"},
          "rating": {"type": "string"},
          "duration": {"type": "string"},
          "thumbnail": {"type": "string"},
          "stream_url": {"type": "string"}
        }
      },
      "WatchHistory": {
        "type": "object",
        "properties": {
          "content": {
            "$ref": "#/components/schemas/Content"
          },
          "watched_at": {"type": "string"},
          "progress": {"type": "integer"},
          "completed": {"type": "boolean"}
        }
      }
    }
  }
}