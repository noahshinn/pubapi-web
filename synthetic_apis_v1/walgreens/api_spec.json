{
  "openapi": "3.0.0",
  "info": {
    "title": "Walgreens Public API",
    "version": "1.0.0",
    "description": "API for pharmacy and retail services"
  },
  "paths": {
    "/api/v1/prescriptions": {
      "get": {
        "summary": "Get user's prescriptions",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of prescriptions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Prescription"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Request prescription refill",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RefillRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Refill request created"
          }
        }
      }
    },
    "/api/v1/stores": {
      "get": {
        "summary": "Get nearby stores",
        "parameters": [
          {
            "name": "latitude",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "longitude",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of stores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Store"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/orders": {
      "get": {
        "summary": "Get user's retail orders",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Place new retail order",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewOrder"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Prescription": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "doctor": {"type": "string"},
          "dosage": {"type": "string"},
          "refills_remaining": {"type": "integer"},
          "last_filled": {"type": "string"},
          "next_refill_date": {"type": "string"},
          "status": {"type": "string"}
        }
      },
      "RefillRequest": {
        "type": "object",
        "properties": {
          "prescription_id": {"type": "string"},
          "store_id": {"type": "string"},
          "user_email": {"type": "string"}
        }
      },
      "Store": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "address": {"type": "string"},
          "phone": {"type": "string"},
          "hours": {"type": "string"},
          "has_pharmacy": {"type": "boolean"},
          "has_drive_thru": {"type": "boolean"},
          "has_photo": {"type": "boolean"}
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            }
          },
          "total": {"type": "number"},
          "status": {"type": "string"},
          "created_at": {"type": "string"}
        }
      },
      "OrderItem": {
        "type": "object",
        "properties": {
          "product_id": {"type": "string"},
          "name": {"type": "string"},
          "quantity": {"type": "integer"},
          "price": {"type": "number"}
        }
      },
      "NewOrder": {
        "type": "object",
        "properties": {
          "user_email": {"type": "string"},
          "store_id": {"type": "string"},
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            }
          }
        }
      }
    }
  }
}