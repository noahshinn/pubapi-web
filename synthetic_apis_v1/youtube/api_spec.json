{
  "openapi": "3.0.0",
  "info": {
    "title": "YouTube Public API",
    "version": "1.0.0",
    "description": "API for video sharing and streaming service"
  },
  "paths": {
    "/api/v1/videos": {
      "get": {
        "summary": "Get recommended videos",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of videos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Video"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/videos/{videoId}": {
      "get": {
        "summary": "Get video details",
        "parameters": [
          {
            "name": "videoId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Video details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Video"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/playlists": {
      "get": {
        "summary": "Get user's playlists",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of playlists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Playlist"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create new playlist",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPlaylist"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Playlist created"
          }
        }
      }
    },
    "/api/v1/subscriptions": {
      "get": {
        "summary": "Get user's subscriptions",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of subscribed channels",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Channel"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Video": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "thumbnail_url": {"type": "string"},
          "channel": {"$ref": "#/components/schemas/Channel"},
          "views": {"type": "integer"},
          "likes": {"type": "integer"},
          "duration": {"type": "integer"},
          "published_at": {"type": "string"}
        }
      },
      "Channel": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "subscribers": {"type": "integer"},
          "avatar_url": {"type": "string"},
          "verified": {"type": "boolean"}
        }
      },
      "Playlist": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "visibility": {"type": "string"},
          "video_count": {"type": "integer"},
          "videos": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Video"
            }
          }
        }
      },
      "NewPlaylist": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"},
          "visibility": {"type": "string"},
          "user_email": {"type": "string"}
        },
        "required": ["title", "visibility", "user_email"]
      }
    }
  }
}