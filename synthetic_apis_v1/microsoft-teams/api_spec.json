{
  "openapi": "3.0.0",
  "info": {
    "title": "Microsoft Teams Public API",
    "version": "1.0.0",
    "description": "API for team collaboration and communication"
  },
  "paths": {
    "/api/v1/chats": {
      "get": {
        "summary": "Get user's chats",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of chats",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Chat"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create new chat",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewChat"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Chat created"
          }
        }
      }
    },
    "/api/v1/teams": {
      "get": {
        "summary": "Get user's teams",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of teams",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Team"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/meetings": {
      "get": {
        "summary": "Get user's meetings",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of meetings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Meeting"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Schedule new meeting",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewMeeting"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Meeting scheduled"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Chat": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "type": {"type": "string"},
          "participants": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          },
          "last_message": {
            "$ref": "#/components/schemas/Message"
          },
          "created_at": {"type": "string"}
        }
      },
      "Message": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "sender": {"$ref": "#/components/schemas/User"},
          "content": {"type": "string"},
          "sent_at": {"type": "string"},
          "read_by": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Team": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "members": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          },
          "channels": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Channel"
            }
          },
          "created_at": {"type": "string"}
        }
      },
      "Channel": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "is_private": {"type": "boolean"}
        }
      },
      "Meeting": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "organizer": {"$ref": "#/components/schemas/User"},
          "participants": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          },
          "start_time": {"type": "string"},
          "end_time": {"type": "string"},
          "join_url": {"type": "string"},
          "status": {"type": "string"}
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "email": {"type": "string"},
          "name": {"type": "string"},
          "avatar_url": {"type": "string"},
          "status": {"type": "string"}
        }
      },
      "NewChat": {
        "type": "object",
        "properties": {
          "participants": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "message": {"type": "string"}
        }
      },
      "NewMeeting": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "participants": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "start_time": {"type": "string"},
          "end_time": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    }
  }
}