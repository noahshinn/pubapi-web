{
  "openapi": "3.0.0",
  "info": {
    "title": "Steam Public API",
    "version": "1.0.0",
    "description": "API for gaming platform service"
  },
  "paths": {
    "/api/v1/library": {
      "get": {
        "summary": "Get user's game library",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of owned games",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Game"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/store/games": {
      "get": {
        "summary": "Get available games in store",
        "parameters": [
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "search",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of games",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Game"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/store/games/{gameId}": {
      "get": {
        "summary": "Get game details",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/friends": {
      "get": {
        "summary": "Get user's friends list",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of friends",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Friend"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/purchases": {
      "post": {
        "summary": "Purchase a game",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PurchaseRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Purchase successful"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Game": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "price": {"type": "number"},
          "publisher": {"type": "string"},
          "release_date": {"type": "string"},
          "categories": {
            "type": "array",
            "items": {"type": "string"}
          },
          "rating": {"type": "number"}
        }
      },
      "GameDetails": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "price": {"type": "number"},
          "publisher": {"type": "string"},
          "developer": {"type": "string"},
          "release_date": {"type": "string"},
          "categories": {
            "type": "array",
            "items": {"type": "string"}
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "rating": {"type": "number"},
          "reviews_count": {"type": "integer"},
          "system_requirements": {
            "type": "object",
            "properties": {
              "minimum": {"type": "string"},
              "recommended": {"type": "string"}
            }
          }
        }
      },
      "Friend": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "username": {"type": "string"},
          "status": {"type": "string"},
          "current_game": {"type": "string"},
          "last_online": {"type": "string"}
        }
      },
      "PurchaseRequest": {
        "type": "object",
        "properties": {
          "game_id": {"type": "string"},
          "user_email": {"type": "string"},
          "payment_method_id": {"type": "string"}
        },
        "required": ["game_id", "user_email", "payment_method_id"]
      }
    }
  }
}